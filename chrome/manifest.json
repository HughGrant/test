{
  "manifest_version": 2,

  "name": "PortiaProject",
  "description": "A little help on Alibaba.",
  "version": "0.4",

  "background": {
    "scripts": ["jquery.js", "urls.js", "background.js"],
    "persistent": true
  },
    
  "content_scripts": [
    {
      "matches": ["*://*.alibaba.com/*"],
      "js": [
        "jquery.js", "config.js", "nprogress.js", "urls.js", "nprogress_setup.js",
        "utils.js", "command_plate.js", "string_score.min.js"
      ],
      "css": ["nprogress.css"]
    },
    {
      "matches": [
        "*://hz.productposting.alibaba.com/product/post_product_interface.*",
        "*://hz.productposting.alibaba.com/product/posting.*",
        "*://hz.productposting.alibaba.com/product/editing.*"
      ],
      "js": ["up.js"]
    },
    {
      "matches": ["*://hz.my.data.alibaba.com/industry/keywords.*"],
      "js": ["keyword.js"]
    },
    {
      "matches": ["*://hz.productposting.alibaba.com/product/products_manage.*"],
      "js": ["product_manage.js"]
    },
    {
      "matches": ["*://*.alibaba.com/product-detail/*"],
      "js": ["jquery.js", "nprogress.js", "config.js", "scratch.js"],
      "css": ["nprogress.css"]
    },
    {
      "matches": ["*://*.alibaba.com/product/*"],
      "js": ["jquery.js", "redirect_to_public.js"]
    },
    {
      "matches": [
        "*://127.0.0.1:*/*",
        "*://localhost:*/*",
        "*://112.74.83.16/*"
      ],
      "js": ["upload_from_back.js"]
    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "background",
    "downloads",
    "management",
    "*://*.aliimg.com/*",
    "*://127.0.0.1:*/*",
    "*://localhost:*/*",
    "*://*.alicdn.com/*",
    "*://112.74.83.16/*",
    "*://*.bootstrapcdn.com/*"
  ],

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  }
}
